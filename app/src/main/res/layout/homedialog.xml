<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="11dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="20sp"
            android:text="Level 1 - Unit 1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/close_ll_dialog"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/shouyezhuantai3"
            android:layout_width="15dp"
            android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"   ></View>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="商品总额"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_commoditysum_dialog"
            android:textColor="#F75001"
            android:text="158"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#F75001"
            android:text="币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"   ></View>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="学习币剩余"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_balance_dialog"
            android:text="158"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
    <LinearLayout
        android:id="@+id/ll_confirm_dialog"
        android:gravity="center"
        android:background="@mipmap/shouyezhuanta4"
        android:layout_width="match_parent"
        android:layout_height="55dp" >
        <TextView
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="支付后开始学习"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_confirm_dialog1"
        android:gravity="center"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="55dp" >
        <TextView
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="余额不足，立即充值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </FrameLayout>
</LinearLayout>