<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/baobaoxinxi4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.example.meetthebabyapp.view.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:use_type="use_height"></com.example.meetthebabyapp.view.StatusBarHeightView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="16dp"></ImageView>
    <FrameLayout
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="500dp">
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/login1"
            android:orientation="vertical"
            android:layout_width="315dp"
            android:layout_height="470dp">
            <FrameLayout
                android:layout_marginLeft="60dp"
                android:layout_marginTop="60dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="#FFF000"
                    android:layout_width="130dp"
                    android:layout_height="10dp"></View>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="#333333"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="欢迎登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:textColor="#999999"
                android:textSize="15sp"
                android:text="请先输入您已有的账号密码"
                android:layout_width="197dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/dengluzuce2"
                        android:layout_width="13dp"
                        android:layout_height="16dp" />
                    <EditText
                        android:hint="请输入您的手机号"
                        android:id="@+id/et_phone_login"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/dengluzuce3"
                        android:layout_width="13dp"
                        android:layout_height="16dp" />
                    <EditText
                        android:id="@+id/et_password_login"
                        android:inputType="textPassword"
                        android:hint="请输入登录密码 "
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@null"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_eye_login"
                        android:layout_width="19dp"
                        android:layout_height="21dp"
                        android:src="@drawable/selector_password_bg" />
                </LinearLayout>
                <View
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6" />
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_login_login"
                android:background="@drawable/loginbtn"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="285dp"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/btn_login_login1"
                android:background="@drawable/bing_bnt"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="285dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_register_login"
                    android:text="注册账号"
                    android:textSize="15sp"
                    android:textColor="#F4511E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6" />
                <TextView
                    android:id="@+id/tv_forget_login"
                    android:text="找回密码"
                    android:textSize="15sp"
                    android:textColor="#A2A0A0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/login"
            android:layout_gravity="bottom|center"
            android:layout_width="282dp"
            android:layout_height="15dp"></LinearLayout>
    </FrameLayout>

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/tv_statement_login"
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal"
        android:text="查看《全求鹦隐私声明》"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>