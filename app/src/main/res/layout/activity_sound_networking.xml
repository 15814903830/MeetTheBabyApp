<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.equipment.SoundNetworkingActivity">
    <androidx.appcompat.widget.Toolbar
        android:fitsSystemWindows="true"
        android:background="#F4511E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_return_settings"
            android:gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@mipmap/fanhui"
                android:layout_width="16dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:text="声波联网"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#0F0F0F"
            android:lineSpacingExtra="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="4、寻找一个安静的环境，将手机\n放在距离设备20cm内"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:visibility="visible"
                android:id="@+id/tv_start_sound"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:gravity="center"
                android:text="开始联网"
                android:background="@drawable/sound"
                android:layout_marginTop="60dp"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/tv_start_sound1"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:gravity="center"
                android:text="重新发送声波"
                android:background="@drawable/sound1"
                android:layout_marginTop="60dp"
                android:layout_width="200dp"
                android:layout_height="200dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:visibility="gone"
            android:id="@+id/btn_receive_sound"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btnsound"
            android:text="收到提示，去绑定设备"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_query_sound"
        android:layout_marginBottom="30dp"
        android:text="小提示：配网的声音可能会有点大，做好准备哦？"
        android:textColor="#666666"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>